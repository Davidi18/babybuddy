# ====================================
# Baby Buddy - Environment Variables
# ====================================
# העתק קובץ זה ל-.env ושנה את הערכים

# === Admin User (משתמש ראשי) ===
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_EMAIL=admin@example.com

# === Django Settings ===
DJANGO_SETTINGS_MODULE=babybuddy.settings.base
SECRET_KEY=django-insecure-GENERATE-A-RANDOM-SECRET-KEY-HERE-50-CHARS
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# === Security ===
CSRF_TRUSTED_ORIGINS=https://your-domain.com
SECURE_PROXY_SSL_HEADER=true
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# === Localization (שפה וזמן) ===
TIME_ZONE=Asia/Jerusalem
LANGUAGE_CODE=he

# === Database - SQLite (ברירת מחדל) ===
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=/data/db.sqlite3

# === Database - PostgreSQL (אופציונלי) ===
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=babybuddy
# DB_USER=babybuddy_user
# DB_PASSWORD=your_secure_db_password
# DB_HOST=postgres
# DB_PORT=5432
# או השתמש ב-DATABASE_URL:
# DATABASE_URL=postgresql://user:password@host:port/dbname

# === Email (אופציונלי) ===
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True
# EMAIL_FROM=noreply@babybuddy.com

# === AWS S3 (אופציונלי - לאחסון קבצים) ===
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_ENDPOINT_URL=https://s3.amazonaws.com

# === Gunicorn (שרת) ===
# WEB_CONCURRENCY=4
# GUNICORN_TIMEOUT=30

# === Sub-path (אם רץ בתת-נתיב) ===
# SUB_PATH=/babybuddy
